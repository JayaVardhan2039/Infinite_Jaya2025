@model List<Code_Challenge_9.Models.Customer>

@{
    ViewBag.Title = "Search Customers by Country";
}

<h2>Search Customers by Country</h2>

<form method="post" action="/Code/CustomersInGermany">
    <div class="form-group">
        <label for="country">Country Name</label>
        <input type="text" name="country" class="form-control" />
        <span class="text-danger">@ViewBag.Error</span>
    </div>
    <button type="submit" class="btn btn-primary">Search</button>
</form>

@if (Model != null && Model.Any())
{
    <h3>Customers in @Request["country"]</h3>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Customer ID</th>
                <th>Company Name</th>
                <th>Contact Name</th>
                <th>Country</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model)
            {
                <tr>
                    <td>@customer.CustomerID</td>
                    <td>@customer.CompanyName</td>
                    <td>@customer.ContactName</td>
                    <td>@customer.Country</td>
                </tr>
            }
        </tbody>
    </table>
}
else if (Model != null)
{
    <div class="alert alert-info mt-3">No matching customers found.</div>
}
